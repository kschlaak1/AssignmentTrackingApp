<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AssignmentTrackingApp"

        android:usesCleartextTraffic="true"
        >

        <activity android:name=".Main"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".TeacherLogin"
            android:exported="true">
            <intent-filter>
                <action android:name="com.example.assignmenttrackingapp.TeacherLogin" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".TeacherRegistration"
            android:exported="true">
            <intent-filter>
                <action android:name="com.example.assignmenttrackingapp.TeacherRegistration"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity android:name=".TeacherHome"
            android:exported="true">
            <intent-filter>
                <action android:name="com.example.assignmenttrackingapp.TeacherHome"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".StudentLogin"
            android:exported="true">
            <intent-filter>
                <action android:name="com.example.assignmenttrackingapp.StudentLogin" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".StudentRegistration"
            android:exported="true">
            <intent-filter>
                <action android:name="com.example.assignmenttrackingapp.StudentRegistration"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity android:name=".StudentHome"
            android:exported="true">
            <intent-filter>
                <action android:name="com.example.assignmenttrackingapp.StudentHome"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity android:name=".CourseEnroll"
            android:exported="true">
            <intent-filter>
                <action android:name="com.example.assignmenttrackingapp.CourseEnroll"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

    </application>

</manifest>
